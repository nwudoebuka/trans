<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Clockin2">
    <android.support.v4.widget.NestedScrollView android:layout_height="match_parent"
        android:layout_width="match_parent"

        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#d6f9e9"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Access Ikoyi"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="16dp"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clocked In"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="30dp"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#01b765"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01h:50m:29s"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#ffffff"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wed dec 26 2018"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="16dp"
            android:textSize="18dp"/>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_outer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            card_view:cardBackgroundColor="#d6f9e9"
            card_view:cardCornerRadius="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            card_view:cardElevation="6dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take a break"
                android:layout_gravity="center"
                android:textColor="#e09d02"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:textSize="25dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            card_view:cardBackgroundColor="#d6f9e9"
            card_view:cardCornerRadius="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            card_view:cardElevation="6dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clock out"
                android:layout_gravity="center"
                android:textColor="#f74311"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:textSize="25dp"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bababa"
            />
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardElevation="6dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                    <TextView
                        android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="6:50 AM"
                        android:layout_marginLeft="20dp"
                        android:textColor="#adadad"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="start"/>
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/clock"

                    android:layout_marginStart="100dp"
                    android:layout_alignLeft="@+id/time"/>
                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginStart="60dp"
                    android:text="clocked in"
                    android:layout_marginLeft="20dp"
                    android:textColor="#adadad"
                    android:layout_alignLeft="@+id/icon"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:src="@drawable/right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                   android:layout_marginRight="0dp"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardElevation="6dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="12:30 AM"
                    android:layout_marginLeft="20dp"
                    android:textColor="#adadad"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="start"/>
                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/cutlery"
                    android:layout_marginStart="100dp"
                    android:layout_alignLeft="@+id/time2"/>
                <TextView
                    android:id="@+id/type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginStart="60dp"
                    android:text="break"
                    android:layout_marginLeft="20dp"
                    android:textColor="#adadad"
                    android:layout_alignLeft="@+id/icon2"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:src="@drawable/right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="0dp"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>