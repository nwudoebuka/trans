<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Timeentry">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:gravity="top"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:gravity="top"
                android:orientation="vertical" >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="16dp"
        android:text="Time Entry"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:text="Nwudo Ebuka"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        />
</LinearLayout>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:text="Ebuka Nwudo"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/days_lin"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">


        <TextView
            android:id="@+id/monday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="Mo"

            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#bababa"
            />
        <TextView
            android:id="@+id/tuesday"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="Tu"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:textColor="#bababa"
            />

        <TextView
            android:id="@+id/wednesday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="We"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:textColor="#bababa"
            />

        <TextView
            android:id="@+id/thursday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="Thu"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:textColor="#bababa"
            />

        <TextView
            android:id="@+id/friday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="Fri"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:textColor="#bababa"
            />


        <TextView
            android:id="@+id/sarturday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="Sat"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:textColor="#bababa"
            />


        <TextView
            android:id="@+id/sunday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="Sun"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:textColor="#bababa"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time_lin"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/days_lin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">


        <TextView
            android:id="@+id/monday_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="6.15"

            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#bababa"
            />
        <TextView
            android:id="@+id/tuesday_time"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="7.8"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:textColor="#bababa"
            />

        <TextView
            android:id="@+id/wednesday_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="0.00"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:textColor="#bababa"
            />

        <TextView
            android:id="@+id/thursday_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="0.00"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:textColor="#bababa"
            />

        <TextView
            android:id="@+id/friday_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="0.00"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:textColor="#bababa"
            />


        <TextView
            android:id="@+id/sarturday_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="0.00"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:textColor="#bababa"
            />


        <TextView
            android:id="@+id/sunday_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="0.00"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:textColor="#bababa"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview2"
        android:layout_below="@+id/time_lin"
        android:layout_width="fill_parent"

        android:layout_height="fill_parent"
        android:layout_marginBottom="?attr/actionBarSize"/>



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/imageView3"
        app:srcCompat="@drawable/menu" />





    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="60dp"
        android:src="@android:drawable/ic_input_add"
        />



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />


</RelativeLayout>